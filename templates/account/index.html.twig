{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<div class="row align-item-center">
			<div class="col-3 text-center">
				<img src="{{user.picture}}" class="mb-3"/>
				<br>
				<span class="badge badge-success">{{user.annonces|length}}


					annonce</span>
			</div>
			<div class="col-9">

				<h1>{{user.fistName}}
					{{user.lastName}}</h1>

			</div>
		</div>
		{{user.description|raw}}
		<hr>
		<h2>Les annonces de
			{{user.fistName}}
			{{user.lastName}}</h2>

		{% if user.annonces|length > 0 %}
			<div class="row">
				{% for annonce in user.annonces %}


					{% include('annonces/_ad.html.twig') %}

				{% endfor %}

			</div>
		{% else %}
			<div class="alert">
				<p>
					<strong>{{user.fistname}}
						n'a pas encore d'annonce sur le site</strong>
				</p>
			</div>
		{% endif %}
	</div>

{% endblock %}
